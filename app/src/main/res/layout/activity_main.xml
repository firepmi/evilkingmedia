<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".CategoryActivity">


    <!--Top View-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--Logo-->
        <ImageView
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/_80sdp"
            android:layout_weight="0.5"
            android:scaleType="fitStart"
            android:src="@drawable/logo" />

        <!--User-->
        <evilkingmedia.cueserve.com.evilkingmedia.utility.FontAwesome
            android:id="@+id/txtuser"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_70sdp"
            android:gravity="center_vertical"
            android:text="@string/fa_icon_user"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_20sdp"/>

        <!--Setting-->
        <evilkingmedia.cueserve.com.evilkingmedia.utility.FontAwesome
            android:id="@+id/txtsetting"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_70sdp"
            android:gravity="center_vertical"
            android:text="@string/fa_icon_setting"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_20sdp"/>

        <!--Log off-->
        <evilkingmedia.cueserve.com.evilkingmedia.utility.FontAwesome
            android:id="@+id/txtlogout"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_70sdp"
            android:gravity="center_vertical"
            android:text="@string/fa_icon_off"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_20sdp"/>

    </LinearLayout>
    <!--End of Top View-->



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_70sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
        <!--Movies-->
        <android.support.v7.widget.CardView
            android:id="@+id/moviesCardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            app:cardBackgroundColor="@color/colorRed"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_weight="1.7">

            <LinearLayout
                android:id="@+id/rlMovies"
                android:layout_width="183dp"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgMovies"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:elevation="@dimen/_5sdp"
                    android:src="@drawable/movies" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_toRightOf="@+id/imgMovies"
                    android:text="MOVIES"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <!--Music-->
        <android.support.v7.widget.CardView
            android:id="@+id/musicCardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            app:cardBackgroundColor="@color/colorRed"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_below="@+id/moviesCardView">

            <LinearLayout
                android:id="@+id/rlMusic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgMusic"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:src="@drawable/music"
                    android:elevation="@dimen/_5sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MUSIC"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/imgMovies"
                    android:layout_marginLeft="@dimen/_5sdp"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

